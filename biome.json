{
	"$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!**/node_modules",
			"!**/dist",
			"!**/coverage",
			"!**/.output",
			"!**/.tanstack",
			"!**/*.gen.ts",
			"!**/routeTree.gen.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": {
				"noReExportAll": "error"
			},
			"style": {
				"noDefaultExport": "error",
				"useExportType": "error",
				"useImportType": {
					"level": "error",
					"options": {
						"style": "separatedType"
					}
				}
			},
			"complexity": {
				"useArrowFunction": "error"
			},
			"suspicious": {
				"noConsole": "error",
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"useSemanticElements": "off"
			},
			"correctness": {
				"noChildrenProp": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"semicolons": "always",
			"attributePosition": "multiline"
		}
	},
	"css": {
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		}
	},
	"assist": {
		"enabled": false
	}
}
